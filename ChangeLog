	src/jrd/cch.cpp (1.149), src/jrd/dyn.epp (1.101), src/jrd/dyn.h
	(1.35), src/jrd/dyn_def.epp (1.150), src/jrd/dyn_del.epp (1.69),
	src/jrd/dyn_mod.epp (1.86), src/jrd/dyn_util.epp (1.45),
